<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="clickPA.prototype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="clickPA.prototype.HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="clickPA.prototype.NearbyActivity"
            android:label="@string/title_activity_nearby"
            android:parentActivityName="clickPA.prototype.HomeScreenActivity" >
        </activity>
        <activity
            android:name="clickPA.prototype.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="clickPA.prototype.HomeScreenActivity" >
        </activity>
        <activity
            android:name="clickPA.prototype.EventDisplayActivity"
            android:label="@string/title_activity_event_display"
            android:parentActivityName="clickPA.prototype.NearbyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.NearbyActivity" />
        </activity>
        <activity
            android:name="clickPA.prototype.SavedActivity"
            android:label="@string/title_activity_saved"
            android:parentActivityName="clickPA.prototype.HomeScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.HomeScreenActivity" />
        </activity>
        <activity
            android:name="clickPA.prototype.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="clickPA.prototype.HomeScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.HomeScreenActivity" />
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="clickPA.prototype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.clickPA.prototype.clickPaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Clickpa" >
        <activity
            android:name="org.clickPA.prototype.Activities.HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.clickPA.prototype.Activities.UpcomingActivity"
            android:label="@string/title_activity_nearby" >
        </activity>
        <activity
            android:name="org.clickPA.prototype.Activities.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name="org.clickPA.prototype.Activities.EventDisplayActivity"
            android:label="@string/title_activity_event_display" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.UpcomingActivity" />
        </activity>
        <activity
            android:name="org.clickPA.prototype.Activities.SavedActivity"
            android:label="@string/title_activity_saved" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.HomeScreenActivity" />
        </activity>
        <activity
            android:name="org.clickPA.prototype.Activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="org.clickPA.prototype.Activities.HomeScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="clickPA.prototype.HomeScreenActivity" />
        </activity>
    </application>

</manifest>